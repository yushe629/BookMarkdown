{
  "manifest_version": 2,
  "name": "MD Formatter",
  "version": "1.0",
  "description": "Format the current page title and URL in MD format",
  "permissions": ["clipboardWrite", "activeTab"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "commands": {
    "formatMD": {
      "suggested_key": {
        "default": "Ctrl+M"
      },
      "description": "Format current page title and URL in MD format"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
